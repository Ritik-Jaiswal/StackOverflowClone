@model StackOverflowCloneProject.ViewModels.QuestionViewModel


<div class="question-summary narrow"
     id="question-summary-65272845">
    <div >
        <div class="votes">
            <div class="mini-counts"><span title="votes">@Model.VotesCount</span></div>
            <div>votes</div>
        </div>

        <div class="status answered">
            <div class="mini-counts"><span title="answer">@Model.AnswersCount</span></div>
            <div>answer</div>
        </div>

        <div class="views">
            <div class="mini-counts"><span title="views">@Model.ViewsCount</span></div>
            <div>views</div>
        </div>

    </div>
    <div class="summary">


        <h3><a href="/questions/view/@Model.QuestionID" class="question-hyperlink">@Model.QuestionName</a></h3>
        <div class="tags t-android t-rest">
            <a class="post-tag" title="show questions tagged &#39;android&#39;" rel="tag">@Model.Category.CategoryName</a> 
        </div>
        <div class="started">
            <a class="started-link">
                answered <span class="relativetime">@Model.QuestionDateAndTime</span>
            </a>
            <a>
                @if (Convert.ToInt32(Session["CurrentUserID"]) != Model.UserID)
                {
                    @:by @Model.User.Name
                }
                else
                {
                    @:by you
                }
                    
        </div>
    </div>
</div>


